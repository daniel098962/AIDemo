<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.TokenActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OpenAI API Key"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/open_ai_token_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:ems="10"
                    android:hint="API Key Here"
                    android:singleLine="true" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/get_open_ai_token_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get OpenAI API Key"
                    android:textAllCaps="false" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/open_ai_key" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="If you want to use OpenAI on this App, \nPlease sign up an account and get your own API Key and Paste it into the field. \nDon't worry, Every Account have Free 18 dollars for Three months. \nAlso don't need to Register Credit info in Free-Trial." />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="StableDiffusion API Key"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/stable_diffusion_token_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:ems="10"
                    android:hint="API Key Here"
                    android:singleLine="true" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/get_stable_diffusion_token_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get StableDiffusion API Key"
                    android:textAllCaps="false" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/stable_api_key" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="If you want to use StableDiffusion on this App, \nPlease sign up an account and get your own API Key and Paste it into the field. \nDon't worry, Every Account have Free 20 Post request. \nAlso don't need to Register Credit info in Free-Trial." />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textAllCaps="false" />
</LinearLayout>